<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.login.LoginActiviity">


    <EditText
        android:id="@+id/ed_accunt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/enter_account" />

    <View
        android:id="@+id/view_account"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/ed_accunt"
        android:background="@color/darker_gray" />


    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_account"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="@string/enter_pass"
        android:inputType="numberPassword" />

    <View
        android:id="@+id/view_pass"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/ed_pass"
        android:background="@color/darker_gray" />


    <Button
        android:id="@+id/btn_longin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/view_pass"
        android:layout_margin="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_enable"
        android:text="@string/login"
        android:textColor="@color/white" />

</RelativeLayout>